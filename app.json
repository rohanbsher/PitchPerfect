{
  "expo": {
    "name": "PitchPerfect",
    "slug": "PitchPerfect",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "pitchperfect",
    "privacy": "public",
    "primaryColor": "#007AFF",
    "description": "Master your pitch with real-time vocal coaching. PitchPerfect uses advanced pitch detection to help you improve your singing with instant feedback, guided exercises, and personalized progress tracking.",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pitchperfect.app",
      "buildNumber": "1",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSMicrophoneUsageDescription": "PitchPerfect needs microphone access to analyze your singing pitch and provide real-time vocal coaching feedback.",
        "UIBackgroundModes": ["audio"],
        "ITSAppUsesNonExemptEncryption": false
      },
      "appStoreUrl": "https://apps.apple.com/app/pitchperfect/id0000000000"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.pitchperfect.app",
      "versionCode": 1,
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "assetBundlePatterns": [
      "assets/**/*"
    ],
    "plugins": [
      "expo-dev-client",
      "@mykin-ai/expo-audio-stream"
    ],
    "extra": {
      "eas": {
        "projectId": "placeholder-eas-project-id"
      }
    },
    "owner": "your-expo-username"
  }
}
