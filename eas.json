{
  "cli": {
    "version": ">= 5.9.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false
      }
    },
    "production": {
      "env": {
        "NPM_CONFIG_IGNORE_SCRIPTS": "true"
      },
      "hooks": {
        "postInstall": "npx patch-package"
      },
      "ios": {
        "buildConfiguration": "Release"
      },
      "android": {
        "buildType": "apk"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "rohanbsher@gmail.com",
        "ascAppId": "6754607632",
        "appleTeamId": "NYMNM2UCQ8"
      }
    }
  }
}
